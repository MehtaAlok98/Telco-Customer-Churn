{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "1024mb",
        "requirements": "api/requirements.txt"
      }
    }
  ],
  "functions": {
    "api/*.py": {
      "runtime": "python3.10",
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "api/app.py" }
  ],
  "env": {
    "MPLCONFIGDIR": "/tmp/matplotlib"
  }
}
