{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "1024mb",
        "requirements": "api/requirements.txt"
      }
    },
    {
      "src": "static/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/main.py" },
    { "src": "/(.*)", "dest": "/static/index.html" }
  ],
  "env": {
    "MPLCONFIGDIR": "/tmp/matplotlib"
  }
}
